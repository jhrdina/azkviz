{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "inlineSourceMap": true
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "files": [
        "./src/az-app/az-app.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
